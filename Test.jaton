class Main {
    public static void main() {
        println("Сумма первых k членов арфметической прогрессии");

        double a1;
        print("Введите а1: ");
        scan(a1);

        double d;
        print("Введите d: ");
        scan(d);

        double k;
        print("Введите k: ");
        scan(k);

        double s;
        double i = k;
        while(i) {
            s = s + i;
            i = i - d;
        }

        println("Сумма первых " + k + " членов арифметицеской прогрессии(d = " + d + ") равна " + s);
    }
}
